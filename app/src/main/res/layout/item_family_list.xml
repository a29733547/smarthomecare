<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="familyInfo"
            type="com.czerny.smarthomecare.data.User" />

        <variable
            name="familyInfotest"
            type="com.czerny.smarthomecare.data.FamilyInfo" />

        <variable
            name="viewModel"
            type="com.czerny.smarthomecare.userfamily.UserFamilyViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_item_family"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/user_family">

        <TextView
            android:id="@+id/text_item_family_list_name"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:text="@{familyInfotest.familyName}"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="familyName" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>